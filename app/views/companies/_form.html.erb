<%= form_for(@company) do |f| %>
  <div><%= f.label :name %>
  	<%= f.text_field :name %>
  <div>
  
  <div><%= f.label :description %>
    <%= f.text_area :description, placeholder: "Write a description..." %>
  </div>
  <div><%= f.label :address %>
    <%= f.text_field :address %>
  </div>
   <div><%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div><%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div><%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div><%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  
  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>